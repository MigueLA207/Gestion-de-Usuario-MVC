@model IEnumerable<TestMVC.Models.User>

<a  asp-controller="Users" asp-action="Create" class="btn btn-info mb-3">Crear Nuevo usuario</a>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <th>Id</th>
                <th>Names</th>
                <th>Last Names</th>
                <th>Email</th>
                <th>Phone</th>
                </thead>
                <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.LastName</td>
                        <td>@user.Mail</td>
                        <td>@user.Phone</td>
                        <td>
                            <div class="d-flex flex-column flex-sm-row gap-2">
                                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
