@model TestMVC.Models.User

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-5 mt-4 border p-3 rounded bg-white shadow-lg">   
            <h2 class="text-center mb-4">Crear Usuario</h2>
            <form asp-controller="Users" asp-action="CreateUser" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Name" class="form-label">Nombre</label>
                    <input asp-for="Name" class="form-control" id="Name" placeholder="Ingresa el nombre" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="LastName" class="form-label">Apellido</label>
                    <input asp-for="LastName" class="form-control" id="LastName" placeholder="Ingresa el apellido" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Mail" class="form-label">Correo Electrónico</label>
                    <input asp-for="Mail" type="email" class="form-control" id="Mail" placeholder="ejemplo@correo.com" required>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Phone" class="form-label">Teléfono</label>
                    <input asp-for="Phone" type="tel" class="form-control" id="Phone" placeholder="3001234567" pattern="[0-9]{7,15}" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Agregar Usuario</button>
            </form> 
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}