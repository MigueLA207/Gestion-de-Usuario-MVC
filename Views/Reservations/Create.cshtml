@model TestMVC.Models.Reservation

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-5 mt-4 border p-3 rounded bg-white shadow-lg">   
            <h2 class="text-center mb-4">Crear Reservaci√≥n</h2>
            <form asp-controller="Reservations" asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Date" class="form-label">Fecha</label>
                    <input asp-for="Date" type="date" class="form-control" id="Date" required>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Hour" class="form-label">Hora</label>
                    <input asp-for="Hour" type="time" class="form-control" id="Hour"  required>
                    <span asp-validation-for="Hour" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="NumberPeople" class="form-label">Numero de personas</label>
                    <input asp-for="NumberPeople" type="number" class="form-control" id="NumberPeople"  required>
                    <span asp-validation-for="NumberPeople" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Observations" class="form-label">Observaciones</label>
                    <input asp-for="Observations" type="text" class="form-control" id="Observations"  required>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label for="IdClient" class="form-label">Cliente</label>
                    <select asp-for="IdClient" class="form-select" asp-items="@(new SelectList(ViewBag.Clients, "Id", "FullName"))">
                        <option value="">-- Selecciona un cliente --</option>
                    </select>
                    <span asp-validation-for="IdClient" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Agregar Reserva</button>
            </form> 
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}