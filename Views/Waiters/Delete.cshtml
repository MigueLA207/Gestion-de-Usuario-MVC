@model TestMVC.Models.Waiter

<h2 class="mt-5">Eliminar Usuario</h2>

<div class="alert alert-warning">
    <p>¿Estás seguro de que quieres eliminar este usuario?</p>
</div>

<ul class="list-group mb-3">
    <li class="list-group-item"><strong>ID:</strong> @Model.Id</li>
    <li class="list-group-item"><strong>Nombre:</strong> @Model.Name</li>
    <li class="list-group-item"><strong>Apellido:</strong> @Model.LastName</li>
    <li class="list-group-item"><strong>Turno:</strong> @Model.Turn</li>
    <li class="list-group-item"><strong>Años de experiencia:</strong> @Model.ExpYears</li>
</ul>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>