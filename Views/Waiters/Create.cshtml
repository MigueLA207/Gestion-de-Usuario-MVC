@model TestMVC.Models.Waiter

<div class="container ">
    <div class="row justify-content-center">
        <div class="col-md-5 mt-4 border p-3 rounded bg-white shadow-lg">   
            <h2 class="text-center mb-4">Crear Mesero</h2>
            <form asp-controller="Waiters" asp-action="CreateWaiter" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Name" class="form-label">Nombre</label>
                    <input asp-for="Name" class="form-control" id="Name" placeholder="Ingresa el nombre" required autocomplete="off">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="LastName" class="form-label">Apellido</label>
                    <input asp-for="LastName" class="form-control" id="LastName" placeholder="Ingresa el apellido" required autocomplete="off">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                
                <div class="mb-3">
                    <label for="Turn" class="form-label">Turno</label>
                    <select asp-for="Turn" class="form-select" id="Turn" required>
                        <option value="" disabled selected>Seleccione un turno</option>
                        <option value="Mañana">Mañana</option>
                        <option value="Tarde">Tarde</option>
                        <option value="Noche">Noche</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="ExpYears" class="form-label">Años de experiencia</label>
                    <input asp-for="ExpYears" type="number" class="form-control" id="Phone" required autocomplete="off">
                    <span asp-validation-for="ExpYears" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Agregar Mesero</button>
            </form> 
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
