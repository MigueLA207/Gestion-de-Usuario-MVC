@model IEnumerable<TestMVC.Models.Waiter>

<h1 class="text-center">Gestion de Meseros</h1>
<a  asp-controller="Waiters" asp-action="Create" class="btn btn-info mb-3">Crear Nuevo usuario</a>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                <th>Id</th>
                <th>Names</th>
                <th>Last Names</th>
                <th>Turno</th>
                </thead>
                <tbody>
                @foreach (var waiter in Model)
                {
                    <tr>
                        <td>@waiter.Id</td>
                        <td>@waiter.Name</td>
                        <td>@waiter.LastName</td>
                        <td>@waiter.Turn</td>
                        <td>
                            <div class="d-flex flex-column flex-sm-row gap-2">
                                <a asp-controller="Waiters" asp-action="Details" asp-route-id="@waiter.Id" class="btn btn-info btn-sm">Detalles</a>
                                <a asp-controller="Waiters" asp-action="Edit" asp-route-id="@waiter.Id" class="btn btn-warning btn-sm">Editar</a>    
                                <a asp-controller="Waiters" asp-action="Delete" asp-route-id="@waiter.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>